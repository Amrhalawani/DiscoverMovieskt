<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.amrhal.discovermovieskt.view.main.fragments.SearchFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

        <EditText
                android:id="@+id/Search_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:fontFamily="@font/coustard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:hint="Search for a Movie :"
                app:layout_constraintEnd_toStartOf="@+id/search_button"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ProgressBar
                android:id="@+id/search_progruss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Search_editText"
                android:visibility="gone"

        />
        <ImageButton
                android:text="Search"
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:id="@+id/search_button"
                android:padding="4dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/ic_search_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Search_editText"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_movies_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/search_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>