<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="#3b3b3b"
              android:clickable="true"
              android:layout_margin="5dp">

    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/movieposterIV_search"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:focusable="true"
            android:scaleType="fitCenter"
    />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/movie_name_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="21dp"
            android:layout_margin="4dp"
                android:textAllCaps="true"
                android:fontFamily="@font/lemonada_semibold"
                android:text="Movie Name"
        />

        <TextView
                android:id="@+id/release_date_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012"
                android:textSize="18dp"
                android:layout_margin="4dp"
                android:fontFamily="@font/lemonada_semibold"
                android:textColor="@color/off_white"
        />
        <TextView
                android:id="@+id/movie_rate_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="  *7.7*"
                android:fontFamily="@font/lemonada_semibold"
                android:textColor="@color/colorAccent"
        />

    </LinearLayout>

</LinearLayout>
        <!--android:adjustViewBounds="true" the images to preserve its aspect ratio-->